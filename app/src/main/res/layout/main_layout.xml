<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/top_control"
        class="pg.com.camera361.TopControl"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        tools:layout="@layout/top_control_layout" />

    <fragment
        android:id="@+id/middle_preview"
        class="pg.com.camera361.MiddlePreview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/middle_preview_layout" />

    <fragment
        android:id="@+id/bottom_control"
        class="pg.com.camera361.BottomControl"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        tools:layout="@layout/bottom_control_layout" />
</LinearLayout>